@page
@model AzureDevOpsTeamMembersVelocity.Pages.LoginModel
@inject AzureDevOpsTeamMembersVelocity.Services.TokenProvider TokenProvider
@{
    ViewData["Title"] = "Login";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" asp-for="Email"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" asp-for="Password"></label>
                    <div class="col-sm-8">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <input name="__RequestVerificationToken" type="hidden" value="@TokenProvider.XsrfToken">
                <div class="form-group row">
                    <button id="login_btn" type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>
